<Window x:Name="winMain" x:Class="MasterProjekat1.View.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="421" Width="835">
    <Grid x:Name="grdMain">

        <Grid Background="#FF464646" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="25*"/>
            </Grid.RowDefinitions>
            <DockPanel x:Name="DockPanMain" LastChildFill="False" Margin="0,3,0,0" IsEnabled="True">
                <Menu x:Name="mnuMain" VerticalAlignment="Top" Width="441">
                    <MenuItem x:Name="novaFirma" Header="Nova firma" RenderTransformOrigin="0.5,0.5" FontSize="18" ToolTip="Unos nove firme" Click="novaFirma_Click">
                    </MenuItem>
                    <MenuItem Header="Izaberite firmu" FontSize="18" ToolTip="Lista postojećih firmi">
                        <MenuItem Name="btnListaFirmi" Header="Lista firmi" Click="btnListaFirmi_Click"/>
                    </MenuItem>
                    <MenuItem FontSize="18" Header="Izlaz (Esc)" ToolTip="Izlazak iz programa" Click="MenuItem_Click"  Width="103"/>
                </Menu>

            </DockPanel>
            <ProgressBar x:Name="prgBar" HorizontalAlignment="Left" Height="20" Margin="46,360,0,0" 
                         VerticalAlignment="Top" Width="160"  />
        </Grid>
    </Grid>
</Window>
