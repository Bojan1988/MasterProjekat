                    <MenuItem Header="Zaključni list"/>
                    <MenuItem Header="Dnevnik glavne knjige"/>
                    <MenuItem Header="Lista prometa"/>
                    <MenuItem Header="Promet po kontima"/>
                </MenuItem>
                <MenuItem Header="Izveštaji">
                    <MenuItem Header="Analitičke kartice"/>
                    <MenuItem Header="Nalozi za knjiženje"/>
                    <MenuItem Header="Zaključni list"/>
                    <MenuItem Header="Lista prometa"/>
