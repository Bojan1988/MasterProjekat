                    <MenuItem Header="Zatvaranje &quot;5&quot; i &quot;6&quot;"/>
                </MenuItem>
                <MenuItem Header="Pregledi">
                    <MenuItem Header="Analitička kartica" Click="MenuItem_Click"/>
