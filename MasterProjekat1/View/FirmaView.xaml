                </MenuItem>
                <MenuItem Header="Šifarnik"/>
                <MenuItem Header="Kontni plan">
                    <MenuItem Header="Zakonska konta"/>
                    <MenuItem Header="Kontni plan"/>
                    <MenuItem Header="Preknjižavanje sa konta na konto"/>
                </MenuItem>
            </MenuItem>
            <Separator/>
            <MenuItem Header="Kupci - Dobavljači" Width="164"/>
            <Separator/>
            <MenuItem Header="PDV" RenderTransformOrigin="0,0.5" Width="153" Height="22">
                <MenuItem Header="Obračun PDV"/>
                <MenuItem Header="KPR"/>
                <MenuItem Header="KIR"/>
            </MenuItem>
            <Separator/>
            <MenuItem Header="Osnovna sredstva" Width="152"/>
            <Separator/>
            <MenuItem Header="Kraj godine" RenderTransformOrigin="0,0.5" Width="165"/>
            <Separator/>
            <MenuItem Header="Sistem" RenderTransformOrigin="0,0.5" VerticalAlignment="Bottom" Width="153"/>
            <Separator/>
            <MenuItem Header="Kraj izbora" RenderTransformOrigin="0,0.5" Width="157"/>
        </Menu>
    </Grid>
